<Window x:Class="CookieClick.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookieClick"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Name="MW">
    <Window.Background>
        <ImageBrush ImageSource="/images/background.png">
        </ImageBrush>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Label Name="ScoreLbl" Content="Score:0" FontSize="50" Foreground="Beige"></Label>
            <Image 
                   Source="/images/koekje.png" 
                   Width="150" Name="KoekjeImg"
                   MouseDown="KoekjeImg_MouseDown" 
                   MouseUp="KoekjeImg_MouseUp"
                   MouseLeave="KoekjeImg_MouseLeave">
            </Image>
        </StackPanel>   
        
        <StackPanel Grid.Column="1">

        </StackPanel>
        <StackPanel Grid.Column="2">
            <Button x:Name="Cursor" IsEnabled="False">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <Image Source="images/Cursor.png" Width="40"></Image>
                    <Label Grid.Column="1">Cursor</Label>
                    <Label Name="LblCursorAantal" Grid.Column="2">0</Label>
                    <Label Name="LblCursorPrijs" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">0</Label>
                </Grid>
            </Button>
            <Button x:Name="Grandma" IsEnabled="False">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <Image Source="images/SupperGrandma.png" Width="40"></Image>
                    <Label Grid.Column="1">Cursor</Label>
                    <Label Name="LblGrandmaAantal" Grid.Column="2">0</Label>
                    <Label Name="LblGrandmaPrijs" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">15</Label>
                </Grid>
            </Button>
            <Button x:Name="Farm" IsEnabled="False" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <Image Source="images/Farm.png" Width="40"></Image>
                    <Label Grid.Column="1">Farm</Label>
                    <Label Name="LblFarmAantal" Grid.Column="2">0</Label>
                    <Label Name="LblFarmPrijs" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">0</Label>
                </Grid>
            </Button>
            
            <Button x:Name="Mine" IsEnabled="False" >Mine</Button>
        </StackPanel>
    </Grid>
</Window>
